{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <div class="container mt-4">
        <div class="row row-cols-1 row-cols-md-2">

            <div class="col-md-6 col-12">
                <div class="row">
                    <div class="resumo-incidentes d-block mt-xl-5" style="height: 70vh">
                        <h3>RESUMO INCIDENTES</h3>
                        <h4>100 Incidentes em aberto</h4>
                        <div class="row">
                            <div class="col">
                                <span class="contador" style="background-color: #7FFFD4;">17</span>
                                Não urgente
                            </div>
                            <div class="col">
                                <span class="contador" style="background-color: #20B2AA;">39</span>
                                Menos urgente
                            </div>
                            <div class="col">
                                <span class="contador" style="background-color: #98FB98;">35</span>
                                Urgente
                            </div>
                            <div class="col">
                                <span class="contador" style="background-color: #FFFF00;">8</span>
                                Mais urgente
                            </div>
                            <div class="col">
                                <span class="contador" style="background-color: #DC143C;">1</span>
                                Extremamente urgente
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="container">
                        <button class="btn btn-outline-info btn-sm">GERAR RELATÓRIO</button>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="container">
                    <div class="row row-cols-3 justify-content-around">


                        {% for queue in queues %}
                        <div class="col" style="display: flex; flex-wrap: wrap;">
                            <div class="card">
                                <div class="card-body" style="background-color: {{ queue.color }};">
                                    <p class="fila">{{ queue.name }}</p>
                                </div>
                            </div>
                        </div>
                        {% endfor %}

                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}
